<Window x:Class="replacer.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:replacer" Topmost="True" ShowActivated="True" WindowState="Normal" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen"
        Title="Configuration Window - Settings Editor View" ShowInTaskbar="False" UseLayoutRounding="True"
        mc:Ignorable="d" Closed="Window_Closed"
         Height="450" Width="800">
    <Window.Resources>
        <local:MainWindowModel x:Key="MainWindowModel" />
    </Window.Resources>

    <StackPanel>
        <Grid DataContext="{Binding Source={StaticResource MainWindowModel}}" >
            <DataGrid x:Name="mainGrid" x:FieldModifier="public" ItemsSource="{Binding ConfigurationCollection}" Background="#FF34C5BE" BorderThickness="5,5,5,1" ColumnHeaderHeight="55" ColumnWidth="*" />
        </Grid>
        <Button x:Name="btOK" Content="OK"  Click="BtOK_Click" />
    </StackPanel>
</Window>
